    $instID = $accion->fields['id'];
	$entities_id = $accion->fields['entities_id'];
	$tipo = $accion->fields['plugin_procedimientos_tipoaccions_id'];

    $rand   = mt_rand();
    echo "<form name='acciondetalle_form$rand' id='acciondetalle_form$rand' method='post'
