                       echo"</td> "
                   . "</tr> "
                   . "<tr> "
                       . "<td width='15%'>Usuario Observador: </td>"
                       . "<td>";
                        User::dropdown(array('name'   => 'users_id_observ',
                           'right'  => 'all',
                           'entity' => -1, 'value'  => $users_id_observ));
                   echo "</tr>";				   
